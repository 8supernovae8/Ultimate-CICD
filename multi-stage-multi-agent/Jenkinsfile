pipeline {
    agent {
        docker {
            image 'maven:3.8.1-jdk-8-alpine'
            args '--rm -v $PWD:/app -v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build Backend') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Build Frontend') {
            agent {
                docker {
                    image 'node:16-alpine'
                    args '--rm -v $PWD:/app'
                }
            }
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }
        stage('Run') {
            steps {
                sh 'java -jar target/HelloWorld.jar'
            }
        }
    }
}
