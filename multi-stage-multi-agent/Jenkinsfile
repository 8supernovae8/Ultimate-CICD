pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Compile the Java code
                    sh 'javac HelloWorld.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run the Java program
                    sh 'java HelloWorld'
                }
            }
        }

        stage('Archive') {
            steps {
                script {
                    // Archive the compiled class files
                    archiveArtifacts artifacts: '*.class', fingerprint: true
                }
            }
        }
    }

    post {
        always {
            // Clean up workspace
            cleanWs()
        }
    }
}

