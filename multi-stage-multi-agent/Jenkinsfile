pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    def javaHome = tool name: 'Java', type: 'jdk'
                    def mvnHome = tool name: 'Maven', type: 'maven'

                    sh "${javaHome}/bin/javac HelloWorld.java"
                }
            }
        }
        stage('Run') {
            steps {
                sh "java HelloWorld"
            }
        }
    }
}
