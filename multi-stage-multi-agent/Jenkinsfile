pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        script{
	// compile java code
        sh 'pwd'
        sh 'cd multi-stage-multi-agent'
        sh 'pwd'
        sh 'javac hello_world.java'
  // run java application
        sh 'java hello_world.java'
        }      
      }	
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        script{
	// run node app
        sh 'node hello.js'
      }
    }
  }
 }
}
