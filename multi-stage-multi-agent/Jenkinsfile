pipeline {
  agent none
  stages {
    stage('Backend') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Frontend') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
    stage('Database') {
      agent {
        docker { image 'mysql:latest' }
      }
      steps {
        echo 'Mock done'
      }
    }
  }
}
