pipeline {
    agent none
    
    stages {
        stage('Back-end') {
            agent {
                docker { 
                    image 'maven:3.8.1-adoptopenjdk-11'
                }
            }
            steps {
                script {
                    // Assuming your backend code is in the 'backend' directory
                    dir('backend') {
                        // Run Maven command or any backend build steps
                        sh 'mvn --version'
                        // Print "Hello, World!" for backend
                        public class HelloWorld {
    public static void main(String[] args) {
        System.out.println("Hello, World! from Java");
    }
}

                    }
                }
            }
        }
        
        stage('Front-end') {
            agent {
                docker { 
                    image 'node:16-alpine'
                }
            }
            steps {
                script {
                    // Assuming your frontend code is in the 'frontend' directory
                    dir('frontend') {
                        // Run Node.js command or any frontend build steps
                        sh 'node --version'
                        // Print "Hello, World!" for frontend
                       console.log('Hello, World! from Node.js');
                    }
                }
            }
        }
    }
}
