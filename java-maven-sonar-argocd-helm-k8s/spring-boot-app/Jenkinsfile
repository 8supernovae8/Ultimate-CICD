pipeline {
    agent {
        docker {
            image 'abhishekf5/maven-abhishek-docker-agent:v1'
            args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                    script {
                        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh "mvn clean install"
                        }
                    }
            }
        }
                stage('Docker image build') {
            steps {
                    script {
                        dir('java-maven-sonar-argocd-helm-k8s/spring-boot-app') {
                        sh "docker build -t spring-boot-app ."
                        }
                    }

                
            }
        }
        stage('Docker image push') {
            steps {
                script {
                    // Define the Docker registry credentials
                    def registry = docker.registry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/')

                    // push the Docker image
                    docker.withRegistry(registry) {
                        def ImageName = "${registry}/spring-boot-app:{BUILDNUMBER}" // Customize the image name as needed
                        def Image = docker.image(ImageName)
                        Image.push()
                    }
                }
            }
        }
    }
}
