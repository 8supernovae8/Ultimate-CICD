pipeline {
  agent any
  parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'feature/U2C-11111', description: 'Branch to deploy from')
        choice(name: 'DEPLOY_ENV', choices: ['dev', 'preProd', 'production'], description: 'Environment to deploy to')
    }
  stages {
    stage('Checkout') {
    environment {
            GIT_REPO_NAME = "Jenkins"
            GIT_USER_NAME = "SpoorthyUnayak"
        }
      steps {
       // sh 'echo passed'
        git branch: "${BRANCH_NAME}", url: "https://github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git"
      }
    }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "spoorthynayak/docker_image:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "gitOpsProject"
            GIT_USER_NAME = "SpoorthyUnayak"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {              
                 sh '''
                    git config user.email "spoorthyunayak@gmail.com"
                    git config user.name "SpoorthyUnayak"
                    BUILD_NUMBER=${BUILD_NUMBER}             
                    cd gitOpsProject                    
                    
                    if [ "${DEPLOY_ENV}" = "dev" ]; then                       
                            echo "dev branch is ReleaseBranchDev in GitOps" 
                            git checkout ReleaseBranchDev
                            ls kubernetesProjectDev/ 
                            sed -i "s/TagImage/${BUILD_NUMBER}/g" kubernetesProjectDev/deployment.yml
                            git add kubernetesProjectDev/deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:ReleaseBranchDev
                    elif [ "${DEPLOY_ENV}" = "preProd" ]; then
                            echo "preProd branch is ReleaseBranchPP in GitOps"
                            git checkout ReleaseBranchPP
                            sed -i "s/TagImage/${BUILD_NUMBER}/g" kubernetesProjectPreprod/deployment.yml
                            git add kubernetesProjectPreprod/deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:ReleaseBranchPP
                   elif [ "${DEPLOY_ENV}" = "production" ]; then
                            echo "production branch is main in GitOps"
                            git checkout main
                            sed -i "s/TagImage/${BUILD_NUMBER}/g" kubernetesProject/deployment.yml
                            git add kubernetesProject/deployment.yml
                            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                   fi
                '''
            }
        }
    }
  }
}
